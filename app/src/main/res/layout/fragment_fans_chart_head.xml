<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="45dp">

        <TextView
            android:id="@+id/tv_my_ranking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:text="我的排名："
            android:textColor="@color/main_text_color_grey"
            android:textSize="14sp"/>

        <com.flyco.roundview.RoundTextView
            android:id="@+id/rtv_go_pay"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/rtv_go_to"
            android:gravity="center"
            android:text="我要赞赏"
            android:textColor="@color/white"
            android:textSize="11sp"
            app:rv_backgroundColor="@color/btn_gold"
            app:rv_cornerRadius="5dp"
            android:visibility="gone"
            />




        <com.flyco.roundview.RoundTextView
            android:id="@+id/rtv_go_to"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:text="立刻前往"
            android:visibility="gone"
            android:textColor="@color/secondary_text_color_grey"
            android:textSize="11sp"

            app:rv_cornerRadius="5dp"
            app:rv_strokeColor="#d7d7d7"
            app:rv_strokeWidth="1dp"/>

    <com.flyco.roundview.RoundTextView
        android:id="@+id/rtv_go_board"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_marginRight="15dp"
        android:text="我要上榜"
        android:visibility="gone"
        app:rv_backgroundColor="@color/btn_gold"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:rv_cornerRadius="5dp"
       />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/divider"/>

</RelativeLayout>