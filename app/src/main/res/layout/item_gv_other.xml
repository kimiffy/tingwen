<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="20dp"
              android:paddingTop="15dp"
            android:id="@+id/ll_program">

    <org.raphets.roundimageview.RoundImageView
        android:id="@+id/iv_photo"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:scaleType="fitCenter"
        app:type="round"
        app:leftBottom_corner_radius="5dp"
        app:leftTop_corner_radius="5dp"
        app:rightBottom_corner_radius="5dp"
        app:rightTop_corner_radius="5dp"
        app:border_color="@color/divider"
        app:border_width="1dp"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:lines="2"
        android:textColor="#2e3133"
        android:textSize="12sp"/>
</LinearLayout>