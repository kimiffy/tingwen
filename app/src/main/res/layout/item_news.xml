<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/touch_bg"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="15dp">

    <ImageView
        android:id="@+id/iv_news_image"
        android:layout_width="105dp"
        android:layout_height="85dp"
        android:layout_alignParentRight="true"
        android:scaleType="centerCrop">
    </ImageView>

    <TextView
        android:id="@+id/tv_news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@id/iv_news_image"
        android:maxLines="3"
        android:text="新闻标题"
        android:textColor="@color/text_black"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/tv_news_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_news_image"
        android:text="2015/07/22"
        android:textColor="@color/assist_text_color_grey"
        android:textSize="10sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/tv_news_date"
        android:layout_marginRight="15dp"
        android:paddingRight="10dp"
        android:layout_toLeftOf="@id/iv_news_image"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_news_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_news_time_1"
            android:gravity="center"
            android:text="02:20"
            android:textColor="@color/assist_text_color_grey"
            android:textSize="10sp"/>

        <ImageView
            android:id="@+id/iv_download"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="6dp"
            android:contentDescription="下载"
            android:src="@drawable/icon_download_grey"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/iv_news_image"
        android:layout_marginTop="20dp"
        android:background="@color/divider"/>

</RelativeLayout>